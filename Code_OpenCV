image=cv2.imread(path)
image_rgb=cv2.cvtColor(image,cv2.COLOR_BGR2RGB)
plt.figure(figsize=(10,8))
plt.imshow(image_rgb)
plt.title("Original Elephant iamge(RGB)")
plt.axis("on")
plt.show()
print("Image shape:",image_rgb.shape)

